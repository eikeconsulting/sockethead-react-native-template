<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Absolute Positioned Image (Fixed) -->
    <ImageView
        android:id="@+id/tito_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/launch_logo"
        android:contentDescription="Tito Icon"
        android:layout_marginTop="185dp"
        android:layout_marginStart="-35dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/title_text" />

    <!-- Centered Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

        <TextView
        android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This app provides general tips.\nIt is not intended to replace professional advice, diagnosis, or treatment."
            android:textSize="16dp"
            android:textColor="#D13D3F"
            android:textAlignment="center"
            android:layout_marginHorizontal="35dp"
            android:gravity="center"/>

        <!-- Black Informational Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Always consult with a qualified healthcare provider, therapist, or other relevant professional before making changes to your routine. The information provided is for informational purposes only."
            android:textSize="14dp"
            android:textColor="#333333"
            android:textAlignment="center"
            android:layout_marginTop="26dp"
            android:layout_marginHorizontal="26dp"
            android:gravity="center"/>
    </LinearLayout>

    <!-- Footer Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copyright © Eike Consulting, LLC. All rights reserved.\nlittle things today™, little things™, little words™ and little movement™ are trademarks of Eike Consulting, LLC."
        android:textSize="12dp"
        android:textColor="#333333"
        android:textAlignment="center"
        android:layout_margin="26dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"/>
</RelativeLayout>
